CREATE TABLE Profesores (
	id_profesor int auto_increment PRIMARY KEY,
	nombre varchar (50),
    mail varchar(100),
    dias_de_clase date
);
 
CREATE TABLE Asesores (
	id_asesor int auto_increment PRIMARY KEY,
	nombre varchar (50) not null,
    mail varchar(100)
);
CREATE TABLE DatosMercado (
	id_instrumento int auto_increment PRIMARY KEY,
	pr_MEP int not null,
    pr_acciones int not null,
    pr_bonos int not null
);
  
CREATE TABLE Corredores (
	id_corredor int auto_increment PRIMARY KEY,
	id_instrumento INT,
	nombre varchar (50),
    mail varchar(100),
    foreign key (id_instrumento) references DatosMercado(id)
);
 
 CREATE TABLE Usuarios (
	id_usuario int auto_increment PRIMARY KEY,
	nombre varchar (50),
    mail varchar(100),
    fecha_apertura date, 
    id_profesor INT,
    id_corredor INT,
    id_asesor INT,
    id_instrumento INT,
    foreign key (id_profesor) references Profesores(id),
    foreign key (id_corredor) references Corredores(id),
    foreign key (id_asesor) references Asesores(id),
    foreign key (id_instrumento) references DatosMercado(id)
);

-- Creo una tabla para manejar la relaci√≥n mucho a muchos entre Corredores y DatosMercado 

CREATE TABLE Corredores_DatosMercado (
  id_corredor INT,
  id_instrumento INT,
  FOREIGN KEY (id_corredor) REFERENCES Corredores(id),
  FOREIGN KEY (id_instrumento) REFERENCES DatosMercado(id)
);


